ClickButton.Text = ""

-- â”€â”€â”€ Toggle Logic â€” Smooth TweenService animations â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
local ToggleOn = false
local tweenInfo = TweenInfo.new(0.25, Enum.EasingStyle.Quint, Enum.EasingDirection.Out)
local tweenInfoColor = TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)

-- Colors
local COLOR_OFF_BG      = Color3.fromRGB(60,  20,  20)
local COLOR_ON_BG       = Color3.fromRGB(15,  40,  30)
local COLOR_OFF_KNOB    = Color3.fromRGB(255, 80,  80)
local COLOR_ON_KNOB     = Color3.fromRGB(60,  220, 130)
local COLOR_OFF_STROKE  = Color3.fromRGB(255, 80,  80)
local COLOR_ON_STROKE   = Color3.fromRGB(60,  220, 130)

local function ToggleSwitch()
	ToggleOn = not ToggleOn

	if ToggleOn then
		-- Pill background
		TweenService:Create(ToggleFrame,  tweenInfoColor, { BackgroundColor3 = COLOR_ON_BG }):Play()
		-- Knob slide right + recolor
		TweenService:Create(Knob,         tweenInfo,      { Position = UDim2.new(1, -18, 0, 2) }):Play()
		TweenService:Create(Knob,         tweenInfoColor, { BackgroundColor3 = COLOR_ON_KNOB }):Play()
		-- Stroke recolor (color tween on UIStroke via its Color property)
		TweenService:Create(TogglePillStroke, tweenInfoColor, {
			Color       = COLOR_ON_STROKE,
			Transparency = 0.4,
		}):Play()
	else
		-- Pill background
		TweenService:Create(ToggleFrame,  tweenInfoColor, { BackgroundColor3 = COLOR_OFF_BG }):Play()
		-- Knob slide left + recolor
		TweenService:Create(Knob,         tweenInfo,      { Position = UDim2.new(0, 2, 0, 2) }):Play()
		TweenService:Create(Knob,         tweenInfoColor, { BackgroundColor3 = COLOR_OFF_KNOB }):Play()
		-- Stroke recolor
		TweenService:Create(TogglePillStroke, tweenInfoColor, {
			Color        = COLOR_OFF_STROKE,
			Transparency = 0.5,
		}):Play()
	end
end
ClickButton.MouseButton1Click:Connect(ToggleSwitch)

