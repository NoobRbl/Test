-- â”€â”€â”€ Rejoin Logic (original) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
RejoinBtn.MouseButton1Click:Connect(function()
	if PetBox.Text == "" then
		local Popup = Instance.new("TextLabel")
		Popup.Parent = ScreenGui
		Popup.Size = UDim2.new(0, 220, 0, 44)
		Popup.Position = UDim2.new(0.5, -110, 0.5, -22)
		Popup.BackgroundColor3 = Color3.fromRGB(10, 14, 22)
		Popup.BackgroundTransparency = 0.1
		Popup.Text = "âš   Please enter a fruit name"
		Popup.TextColor3 = Color3.fromRGB(255, 160, 60)
		Popup.Font = Enum.Font.GothamBold
		Popup.TextSize = 13
		Popup.ZIndex = 10

		local PC = Instance.new("UICorner")
		PC.CornerRadius = UDim.new(0, 10)
		PC.Parent = Popup

		local PS = Instance.new("UIStroke")
		PS.Color = Color3.fromRGB(255, 160, 60)
		PS.Transparency = 0.5
		PS.Thickness = 1
		PS.Parent = Popup

		game:GetService("Debris"):AddItem(Popup, 4)
	else
		RejoinBtn.Text = "Hopping servers..."
		RejoinBtn.BackgroundColor3 = Color3.fromRGB(50, 120, 180)

		local PlaceId = game.PlaceId
		local JobId = game.JobId
		TeleportService:TeleportToPlaceInstance(PlaceId, JobId, LocalPlayer)
	end
end)
