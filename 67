--// üß† UI Hub Demo ‚Äì OrionLib v3.0 (fixed)
--// Safe client-side GUI
--// Script by ChatGPT

-- T·∫£i th∆∞ vi·ªán OrionLib
local success, OrionLib = pcall(function()
    return loadstring(game:HttpGet("https://raw.githubusercontent.com/OrionLibrary/Orion/main/source.lua"))()
end)

if not success or not OrionLib then
    warn("Kh√¥ng th·ªÉ t·∫£i OrionLib. Ki·ªÉm tra k·∫øt n·ªëi ho·∫∑c link t·∫£i.")
    return
end

-- T·∫°o c·ª≠a s·ªï ch√≠nh
local Window = OrionLib:MakeWindow({
    Name = "Demo UI Hub",
    HidePremium = false,
    IntroEnabled = true,
    IntroText = "Demo Hub",
    SaveConfig = true,
    ConfigFolder = "DemoUIHubConfig"
})

------------------------------------------------------------
-- üåü Tab Main
------------------------------------------------------------
local MainTab = Window:MakeTab({
    Name = "Main",
    Icon = "rbxassetid://6023426915",
    PremiumOnly = false
})

MainTab:AddButton({
    Name = "Say Hello",
    Callback = function()
        OrionLib:MakeNotification({
            Name = "Hello!",
            Content = "Xin ch√†o t·ª´ Demo UI Hub!",
            Image = "rbxassetid://6023426915",
            Time = 3
        })
        print("Hello from Demo UI Hub!")
    end
})

MainTab:AddToggle({
    Name = "Auto Example (LOCAL)",
    Default = false,
    Callback = function(state)
        OrionLib:MakeNotification({
            Name = "Auto Example",
            Content = "Tr·∫°ng th√°i: " .. tostring(state),
            Time = 2
        })
        print("Auto Example state:", state)
    end
})

MainTab:AddSlider({
    Name = "WalkSpeed (LOCAL)",
    Min = 16,
    Max = 100,
    Default = 16,
    Color = Color3.fromRGB(255, 255, 255),
    Increment = 1,
    ValueName = "Speed",
    Callback = function(value)
        local plr = game.Players.LocalPlayer
        if plr and plr.Character and plr.Character:FindFirstChild("Humanoid") then
            plr.Character.Humanoid.WalkSpeed = value
        end
    end
})

MainTab:AddKeybind({
    Name = "Toggle UI",
    Default = Enum.KeyCode.RightControl,
    Callback = function()
        OrionLib:Toggle()
    end
})

------------------------------------------------------------
-- ‚öôÔ∏è Tab Settings
------------------------------------------------------------
local SettingsTab = Window:MakeTab({
    Name = "Settings",
    Icon = "rbxassetid://6023426915",
    PremiumOnly = false
})

SettingsTab:AddButton({
    Name = "Destroy UI",
    Callback = function()
        OrionLib:Destroy()
    end
})

------------------------------------------------------------
-- üöÄ Kh·ªüi t·∫°o UI
------------------------------------------------------------
OrionLib:Init()

