-- =========================================
local StealTab = Window:CreateTab("STEAL OP ğŸ’")

-- ğŸŸ¢ SEND LINK
StealTab:CreateButton({
    Name = "Send Link ğŸ”—",
    Callback = function()
        local player = game.Players.LocalPlayer
        local gui = Instance.new("ScreenGui")
        gui.Name = "ServerNumberGui"
        gui.ResetOnSpawn = false
        gui.Parent = player:WaitForChild("PlayerGui")

        local text = Instance.new("TextLabel")
        text.AnchorPoint = Vector2.new(0.5, 0.5)
        text.Position = UDim2.new(0.5, 0, 0.5, 0)
        text.Size = UDim2.new(0.6, 0, 0.2, 0)
        text.BackgroundTransparency = 1
        text.TextColor3 = Color3.fromRGB(0, 255, 0)
        text.Font = Enum.Font.GothamBold
        text.TextScaled = true
        text.Text = "SERVER: 0"
        text.Parent = gui

        local madeby = Instance.new("TextLabel")
        madeby.AnchorPoint = Vector2.new(0.5, 1)
        madeby.Position = UDim2.new(0.5, 0, 0.98, 0)
        madeby.Size = UDim2.new(0.4, 0, 0.05, 0)
        madeby.BackgroundTransparency = 1
        madeby.TextColor3 = Color3.fromRGB(0, 255, 255)
        madeby.Font = Enum.Font.GothamBold
        madeby.TextScaled = true
        madeby.Text = "Made by NoobRoblox"
        madeby.Parent = gui

        local target = math.random(1, 2390)
        local duration = 5
        local stepTime = duration / math.max(target, 1)

        for i = 1, target do
            text.Text = "SERVER: " .. tostring(i)
            task.wait(stepTime)
        end

        text.Text = "SERVER: " .. tostring(target)
        task.wait(1.5)
        gui:Destroy()
    end
})

