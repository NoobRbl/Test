--// UI Hub Demo – OrionLib version
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/OrionLibrary/Orion/main/source.lua"))()
local Window = OrionLib:MakeWindow({
    Name = "Demo UI Hub",
    HidePremium = true,
    IntroEnabled = true,
    IntroText = "Demo Hub",
    SaveConfig = true,
    ConfigFolder = "DemoUIHubConfig"
})

-- Tab “Main”
local MainTab = Window:MakeTab({
    Name = "Main",
    Icon = "rbxassetid://6023426915", -- ví dụ icon
    PremiumOnly = false
})

MainTab:AddButton({
    Name = "Say Hello",
    Callback = function()
        print("Hello from Demo UI Hub!")
    end
})

MainTab:AddToggle({
    Name = "Auto Example (LOCAL)",
    Default = false,
    Callback = function(state)
        print("Auto Example state:", state)
    end
})

MainTab:AddSlider({
    Name = "WalkSpeed (LOCAL)",
    Min = 16,
    Max = 100,
    Default = 16,
    Callback = function(value)
        local plr = game.Players.LocalPlayer
        if plr and plr.Character and plr.Character:FindFirstChild("Humanoid") then
            plr.Character.Humanoid.WalkSpeed = value
        end
    end
})

MainTab:AddKeybind({
    Name = "Toggle UI",
    Default = Enum.KeyCode.RightControl,
    Callback = function()
        OrionLib:Toggle()
    end
})

-- Tab “Settings”
local SettingsTab = Window:MakeTab({
    Name = "Settings",
    Icon = "rbxassetid://6023426915",
    PremiumOnly = false
})

SettingsTab:AddButton({
    Name = "Destroy UI",
    Callback = function()
        OrionLib:Destroy()
    end
})

