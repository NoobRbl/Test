-- Local-only cosmetic Money/Rebirth overlay (không thay đổi server)
-- Đặt file này trong StarterPlayer > StarterPlayerScripts

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Name = "LocalStatsOverlay"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

-- Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 220, 0, 120)
frame.Position = UDim2.new(0, 10, 0, 50)
frame.BackgroundTransparency = 0.15
frame.BackgroundColor3 = Color3.fromRGB(25,25,30)
frame.BorderSizePixel = 0
frame.Parent = gui

local function makeLabel(name, y)
    local lbl = Instance.new("TextLabel")
    lbl.Size = UDim2.new(1, -12, 0, 28)
    lbl.Position = UDim2.new(0, 6, 0, y)
    lbl.BackgroundTransparency = 1
    lbl.TextXAlignment = Enum.TextXAlignment.Left
    lbl.Font = Enum.Font.GothamBold
    lbl.TextSize = 18
    lbl.TextColor3 = Color3.fromRGB(240,240,240)
    lbl.Parent = frame
    return lbl
end

local moneyLabel = makeLabel("Money", 8)
local rebirthLabel = makeLabel("Rebirth", 36)

-- Buttons to change only local displayed values
local function makeBtn(text, x, y)
    local b = Instance.new("TextButton")
    b.Size = UDim2.new(0, 48, 0, 24)
    b.Position = UDim2.new(0, x, 0, y)
    b.Text = text
    b.Font = Enum.Font.Gotham
    b.TextSize = 16
    b.Parent = frame
    return b
end

local mMinus = makeBtn("-", 6, 68)
local mPlus  = makeBtn("+", 60, 68)
local rMinus = makeBtn("-", 114, 68)
local rPlus  = makeBtn("+", 168, 68)

-- Local (client-side) values
local localMoney = 0
local localRebirth = 0

local function updateLabels()
    moneyLabel.Text = "Money: " .. tostring(localMoney)
    rebirthLabel.Text = "Rebirth: " .. tostring(localRebirth)
end

-- Nếu bạn muốn hiển thị giá trị server (leaderstats) mà KHÔNG thay đổi, uncomment phần này
--[[
player.CharacterAdded:Connect(function()
    local ls = player:FindFirstChild("leaderstats")
    if ls then
        local moneyObj = ls:FindFirstChild("Money")
        local rebObj = ls:FindFirstChild("Rebirth")
        if moneyObj then
            moneyObj.Changed:Connect(function()
                localMoney = moneyObj.Value
                updateLabels()
            end)
            localMoney = moneyObj.Value
        end
        if rebObj then
            rebObj.Changed:Connect(function()
                localRebirth = rebObj.Value
                updateLabels()
            end)
            localRebirth = rebObj.Value
        end
    end
    updateLabels()
end)
--]]

-- Button behavior: chỉ thay đổi GUI local
mMinus.MouseButton1Click:Connect(function()
    localMoney = math.max(0, localMoney - 1)
    updateLabels()
end)
mPlus.MouseButton1Click:Connect(function()
    localMoney = localMoney + 1
    updateLabels()
end)
rMinus.MouseButton1Click:Connect(function()
    localRebirth = math.max(0, localRebirth - 1)
    updateLabels()
end)
rPlus.MouseButton1Click:Connect(function()
    localRebirth = localRebirth + 1
    updateLabels()
end)

-- Init
updateLabels()
