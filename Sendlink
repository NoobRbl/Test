--// Steal a Brainrot (fun GUI v3 with Server Counter) //--

local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local TweenService = game:GetService("TweenService")

-- GUI ch√≠nh
local gui = Instance.new("ScreenGui")
gui.Name = "StealABrainrot"
gui.ResetOnSpawn = false
gui.Parent = playerGui

-- Khung ch√≠nh
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 360, 0, 280)
frame.Position = UDim2.new(0.5, -180, 0.5, -140)
frame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
frame.Parent = gui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 20)
corner.Parent = frame

-- Ti√™u ƒë·ªÅ
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 40)
title.Position = UDim2.new(0, 0, 0, 5)
title.Text = "Steal a Brainrot üòé"
title.BackgroundTransparency = 1
title.Font = Enum.Font.SourceSansBold
title.TextScaled = true
title.TextColor3 = Color3.fromRGB(0, 255, 0)
title.Parent = frame

-- H√†m t·∫°o n√∫t nhanh
local function makeButton(text, color, ypos)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(0, 260, 0, 45)
	btn.Position = UDim2.new(0.5, -130, 0, ypos)
	btn.Text = text
	btn.TextScaled = true
	btn.Font = Enum.Font.SourceSansBold
	btn.TextColor3 = Color3.fromRGB(255,255,255)
	btn.BackgroundColor3 = color
	btn.Parent = frame

	local c = Instance.new("UICorner")
	c.CornerRadius = UDim.new(0, 10)
	c.Parent = btn

	return btn
end

-- C√°c n√∫t
local dupeBtn = makeButton("Dupe", Color3.fromRGB(100,150,255), 60)
local linkBtn = makeButton("Send Link", Color3.fromRGB(80,200,120), 110)
local eventBtn = makeButton("Add Event", Color3.fromRGB(220,180,70), 160)
local spawnBtn = makeButton("Spawn Brainrot", Color3.fromRGB(255,100,100), 210)

-- Label popup hi·ªáu ·ª©ng
local popup = Instance.new("TextLabel")
popup.Size = UDim2.new(1, 0, 1, 0)
popup.BackgroundTransparency = 1
popup.Text = ""
popup.TextScaled = true
popup.Font = Enum.Font.SourceSansBold
popup.TextColor3 = Color3.fromRGB(0,255,0)
popup.Visible = false
popup.Parent = gui

-- Label server counter (ri√™ng bi·ªát GUI)
local serverLabel = Instance.new("TextLabel")
serverLabel.Size = UDim2.new(0, 500, 0, 120)
serverLabel.Position = UDim2.new(0.5, -250, 0.4, -60)
serverLabel.BackgroundTransparency = 1
serverLabel.Text = ""
serverLabel.TextScaled = true
serverLabel.Font = Enum.Font.SourceSansBold
serverLabel.TextColor3 = Color3.fromRGB(0,255,0)
serverLabel.Visible = false
serverLabel.Parent = playerGui

-- Hi·ªáu ·ª©ng popup
local function showMessage(text, color)
	popup.Text = text
	popup.TextColor3 = color
	popup.Visible = true
	popup.TextTransparency = 1

	local fadeIn = TweenService:Create(popup, TweenInfo.new(0.4), {TextTransparency = 0})
	local fadeOut = TweenService:Create(popup, TweenInfo.new(0.4), {TextTransparency = 1})
	fadeIn:Play()
	fadeIn.Completed:Wait()
	task.wait(0.7)
	fadeOut:Play()
	fadeOut.Completed:Wait()
	popup.Visible = false
end

-- C√°c hi·ªáu ·ª©ng n√∫t kh√°c
dupeBtn.MouseButton1Click:Connect(function()
	showMessage("üåÄ Duplicating the vibes...", Color3.fromRGB(120,170,255))
end)

eventBtn.MouseButton1Click:Connect(function()
	showMessage("üéâ Event Added Successfully!", Color3.fromRGB(255,255,0))
end)

spawnBtn.MouseButton1Click:Connect(function()
	showMessage("üß† Spawning Brainrot üí•", Color3.fromRGB(255,100,100))
end)

-- N√∫t "Send Link" c√≥ hi·ªáu ·ª©ng ƒë·∫∑c bi·ªát: ƒë·∫øm server
linkBtn.MouseButton1Click:Connect(function()
	showMessage("üîó Sending Link... ", Color3.fromRGB(80,255,80))

	serverLabel.Visible = true

	for i = 1, 1971 do
		serverLabel.Text = "Server: " .. i
		task.wait(0.002) -- t·ªëc ƒë·ªô ƒë·∫øm (gi·∫£m s·ªë ƒë·ªÉ ch·∫°y nhanh h∆°n)
	end

	-- Khi ƒë·∫øm xong -> nh·∫•p nh√°y xanh nh·∫π
	for n = 1, 6 do
		serverLabel.TextTransparency = (n % 2 == 0) and 0 or 0.4
		task.wait(0.2)
	end

	serverLabel.Visible = false
end)
