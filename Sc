<script>
// ── Particle / Beam Canvas ──
(function () {
  const canvas = document.getElementById('bg-canvas');
  const ctx    = canvas.getContext('2d');
  let W, H, particles, beams;

  function resize() {
    W = canvas.width  = window.innerWidth;
    H = canvas.height = window.innerHeight;
  }

  function randomBetween(a, b) { return a + Math.random() * (b - a); }

  function initParticles() {
    particles = Array.from({ length: 120 }, () => ({
      x: randomBetween(0, W),
      y: randomBetween(0, H),
      r: randomBetween(0.5, 2),
      vx: randomBetween(-0.2, 0.2),
      vy: randomBetween(-0.4, -0.1),
      alpha: randomBetween(0.2, 0.8),
      color: Math.random() > 0.5 ? '0,255,255' : '0,255,136'
    }));
  }

  function initBeams() {
    beams = Array.from({ length: 8 }, () => ({
      x: randomBetween(0, W),
      y: randomBetween(0, H),
      angle: randomBetween(-0.3, 0.3),
      speed: randomBetween(0.5, 1.5),
      len: randomBetween(80, 220),
      alpha: randomBetween(0.04, 0.12),
      color: Math.random() > 0.5 ? '0,255,255' : '0,255,136'
    }));
  }

  function drawParticles() {
    particles.forEach(p => {
      ctx.save();
      ctx.globalAlpha = p.alpha;
      ctx.fillStyle = `rgba(${p.color},1)`;
      ctx.shadowColor = `rgb(${p.color})`;
      ctx.shadowBlur = 8;
      ctx.beginPath();
      ctx.arc(p.x, p.y, p.r, 0, Math.PI * 2);
      ctx.fill();
      ctx.restore();

      p.x += p.vx;
      p.y += p.vy;
      if (p.y < -5)  { p.y = H + 5; p.x = randomBetween(0, W); }
      if (p.x < -5)  p.x = W + 5;
      if (p.x > W+5) p.x = -5;
    });
  }

  function drawBeams() {
    beams.forEach(b => {
      const x2 = b.x + Math.cos(b.angle + Math.PI / 2) * b.len;
      const y2 = b.y + Math.sin(b.angle + Math.PI / 2) * b.len;
      const grad = ctx.createLinearGradient(b.x, b.y, x2, y2);
      grad.addColorStop(0, `rgba(${b.color},0)`);
      grad.addColorStop(0.5, `rgba(${b.color},${b.alpha})`);
      grad.addColorStop(1, `rgba(${b.color},0)`);
      ctx.save();
      ctx.strokeStyle = grad;
      ctx.lineWidth = 1;
      ctx.beginPath();
      ctx.moveTo(b.x, b.y);
      ctx.lineTo(x2, y2);
      ctx.stroke();
      ctx.restore();

      b.y += b.speed;
      if (b.y > H + b.len) { b.y = -b.len; b.x = randomBetween(0, W); }
    });
  }

  // Radial glow in centre
  function drawGlow() {
    const cx = W / 2, cy = H / 2;
    const r  = Math.min(W, H) * 0.55;
    const g  = ctx.createRadialGradient(cx, cy, 0, cx, cy, r);
    g.addColorStop(0,   'rgba(0,255,255,0.04)');
    g.addColorStop(0.5, 'rgba(0,255,136,0.02)');
    g.addColorStop(1,   'transparent');
    ctx.fillStyle = g;
    ctx.fillRect(0, 0, W, H);
  }

  function loop() {
    ctx.clearRect(0, 0, W, H);
    drawGlow();
    drawBeams();
    drawParticles();
    requestAnimationFrame(loop);
  }

  window.addEventListener('resize', () => { resize(); initParticles(); initBeams(); });
  resize();
  initParticles();
  initBeams();
  loop();
})();
</script>
</body>
