-- â”‚           SERVER HOP LOGIC              â”‚
-- â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜

-- Láº¥y danh sÃ¡ch server cÃ´ng khai qua API
local function getPublicServers(placeId, cursor)
    local url = string.format(
        "https://games.roblox.com/v1/games/%d/servers/Public?sortOrder=Asc&limit=100",
        placeId
    )
    if cursor and cursor ~= "" then
        url = url .. "&cursor=" .. cursor
    end

    local success, response = pcall(function()
        return HttpService:GetAsync(url)
    end)

    if not success then
        return nil, nil
    end

    local ok, data = pcall(function()
        return HttpService:JSONDecode(response)
    end)

    if not ok or not data then
        return nil, nil
    end

    return data.data, data.nextPageCursor
end

-- Chá»n server ngáº«u nhiÃªn chÆ°a tá»«ng hop
local function pickRandomServer(servers)
    -- Lá»c cÃ¡c server cÃ²n chá»— vÃ  chÆ°a hop
    local valid = {}
    for _, server in ipairs(servers) do
        local notCurrent  = server.id ~= game.JobId
        local notVisited  = not visitedJobIds[server.id]
        local hasSpace    = (server.playing or 0) < (server.maxPlayers or 1)
        if notCurrent and notVisited and hasSpace then
            table.insert(valid, server)
        end
    end

    if #valid == 0 then
        return nil
    end

    return valid[math.random(1, #valid)]
end

-- ThÃªm JobId vÃ o báº£ng Ä‘Ã£ thÄƒm, reset náº¿u quÃ¡ giá»›i háº¡n
local function recordJobId(jobId)
    local count = 0
    for _ in pairs(visitedJobIds) do count = count + 1 end

    if count >= CONFIG.MAX_JOB_IDS then
        -- XoÃ¡ toÃ n bá»™ vÃ  reset
        visitedJobIds = {}
    end

    visitedJobIds[jobId] = true
end

-- HÃ m hop server chÃ­nh
local function hopServer(setStatus)
    if isHopping then return end
    isHopping = true

    local placeId = game.PlaceId
    setStatus("ğŸ” Äang tÃ¬m server...", CONFIG.TEXT_WARN)

    -- Thu tháº­p nhiá»u trang server náº¿u cáº§n
    local allServers = {}
    local cursor     = nil
    local pagesFetched = 0

    repeat
        local servers, nextCursor = getPublicServers(placeId, cursor)

        if not servers then
            setStatus("âŒ KhÃ´ng láº¥y Ä‘Æ°á»£c danh sÃ¡ch server!", CONFIG.TEXT_ERROR)
            isHopping = false
            return
        end

        for _, s in ipairs(servers) do
            table.insert(allServers, s)
        end

        cursor      = nextCursor
        pagesFetched = pagesFetched + 1

        -- Giá»›i háº¡n 3 trang Ä‘á»ƒ trÃ¡nh chá» lÃ¢u
    until (not cursor or cursor == "" or pagesFetched >= 3)

    if #allServers == 0 then
        setStatus("âŒ KhÃ´ng cÃ³ server nÃ o!", CONFIG.TEXT_ERROR)
        isHopping = false
        return
    end

    local chosen = pickRandomServer(allServers)

    if not chosen then
        setStatus("âš ï¸ Háº¿t server má»›i! Thá»­ láº¡i sau.", CONFIG.TEXT_WARN)
        isHopping = false
        return
    end

    -- Ghi láº¡i server hiá»‡n táº¡i trÆ°á»›c khi rá»i
    recordJobId(game.JobId)

    setStatus("ğŸš€ Äang hop...", CONFIG.ACCENT_COLOR)

    -- Teleport sang server Ä‘Æ°á»£c chá»n
    local ok, err = pcall(function()
        TeleportService:TeleportToPlaceInstance(placeId, chosen.id, LocalPlayer)
    end)

    if not ok then
        setStatus("âŒ Lá»—i teleport: " .. tostring(err), CONFIG.TEXT_ERROR)
        isHopping = false
    end
    -- Náº¿u teleport thÃ nh cÃ´ng client sáº½ rá»i game, khÃ´ng cáº§n reset isHopping
end

