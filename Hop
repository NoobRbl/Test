-- â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜

-- Hover effect cho HopButton
HopButton.MouseEnter:Connect(function()
    if not isHopping then
        tween(HopButton, {BackgroundColor3 = Color3.fromRGB(30, 190, 255)}, 0.15)
    end
end)

HopButton.MouseLeave:Connect(function()
    if not isHopping then
        tween(HopButton, {BackgroundColor3 = CONFIG.ACCENT_COLOR}, 0.15)
    end
end)

-- Click HopButton
HopButton.MouseButton1Click:Connect(function()
    if isHopping then return end

    -- Hiá»‡u á»©ng nháº¥n
    tween(HopButton, {BackgroundColor3 = Color3.fromRGB(0, 130, 210)}, 0.1)
    task.wait(0.1)
    tween(HopButton, {BackgroundColor3 = CONFIG.ACCENT_COLOR}, 0.15)

    -- Äá»•i text nÃºt sang loading
    HopText.Text = "Äang tÃ¬m..."
    HopButton.Active = false

    hopServer(setStatus)

    -- Reset nÃºt náº¿u khÃ´ng teleport thÃ nh cÃ´ng
    task.delay(5, function()
        if not isHopping then return end
        isHopping   = false
        HopText.Text = "Hop Server"
        HopButton.Active = true
        tween(HopButton, {BackgroundColor3 = CONFIG.ACCENT_COLOR}, 0.2)
    end)
end)

-- â”€â”€ ÄÃ³ng / Má»Ÿ Hub â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
local hubOpen = true

local function closeHub()
    hubOpen = false
    tween(MainFrame, {Size = UDim2.new(0, 220, 0, 0), BackgroundTransparency = 1}, 0.3)
    task.delay(0.3, function()
        MainFrame.Visible   = false
        ToggleButton.Visible = true
        tween(ToggleButton, {BackgroundTransparency = 0}, 0.2)
    end)
end

local function openHub()
    hubOpen           = true
    MainFrame.Visible = true
    MainFrame.Size    = UDim2.new(0, 220, 0, 0)
    MainFrame.BackgroundTransparency = 1
    tween(MainFrame, {Size = UDim2.new(0, 220, 0, 130), BackgroundTransparency = 0}, 0.3)
    ToggleButton.Visible = false
end

CloseButton.MouseButton1Click:Connect(closeHub)
ToggleButton.MouseButton1Click:Connect(openHub)

-- Hover CloseButton
CloseButton.MouseEnter:Connect(function()
    tween(CloseButton, {BackgroundColor3 = Color3.fromRGB(80, 30, 35)}, 0.12)
end)
CloseButton.MouseLeave:Connect(function()
    tween(CloseButton, {BackgroundColor3 = Color3.fromRGB(50, 25, 30)}, 0.12)
end)

-- â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”
-- â”‚         OPEN ANIMATION KHI START        â”‚
-- â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜
MainFrame.Size              = UDim2.new(0, 220, 0, 0)
MainFrame.BackgroundTransparency = 1
task.delay(0.3, function()
    tween(MainFrame, {Size = UDim2.new(0, 220, 0, 130), BackgroundTransparency = 0}, 0.4)
end)

-- â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”
-- â”‚              STARTUP LOG                â”‚
